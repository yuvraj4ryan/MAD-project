<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFC4E1"
    tools:context=".TimetableActivity"
    tools:ignore="MissingDefaultResource">

    <!-- Monday Heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timetable"
        android:id="@+id/timetableHeading"
        android:textColor="#FFFFFF"
        android:background="@color/darkblue"
        android:backgroundTint="@color/darkblue"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="8dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR DAILY SCHEDULE"
        android:textColor="@color/darkblue"

        android:fontFamily="sans-serif-smallcaps"
        android:padding="8dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/timetableHeading"/>

    <ImageButton
        android:id="@+id/timeTableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:padding="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/timetable1"

        />

    <Button
        android:id="@+id/bt1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="100dp"
        android:text="Back"
        android:backgroundTint="@color/darkblue"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:onClick="onBackButtonClicked"
        />



</RelativeLayout>